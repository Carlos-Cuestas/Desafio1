@model IEnumerable<Desafio1.Models.Pedido>

@{
    ViewBag.Title = "Pedido";
}

<h2>Pedido</h2>

<p>
    @Html.ActionLink("Crear Pedido", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<style>
    tr, th, td {
        border: solid 1px;
    }

    thead {
        background-color: gray;
        color: white;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th class="text-center">
                Opciones
            </th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.clientes.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })|
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })|
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

        </td>
    </tr>
}

</table>
