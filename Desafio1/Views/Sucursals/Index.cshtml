@model IEnumerable<Desafio1.Models.Sucursal>

@{
    ViewBag.Title = "Sucursal";
}

<h2>Sucursal</h2>

<p>
    @Html.ActionLink("Crear Nueva Sucursal", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<style>
    tr, th, td {
        border: solid 1px;
    }

    thead {
        background-color: gray;
        color: white;
    }
</style>
<table class="table">
    <thead> 
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Encargado)
            </th>
            <th class="text-center">
                Opciones
            </th>
        </tr>
    </thead>
    

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Municipio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Encargado)
        </td>
        <td class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })|
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })|
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

        </td>
    </tr>
}

</table>
